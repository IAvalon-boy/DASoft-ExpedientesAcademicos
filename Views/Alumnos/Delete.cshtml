@model SistemaExpedientesAcademicos.Models.Alumno
@{
    ViewData["Title"] = "Eliminar Alumno";
}

<h1>Eliminar Alumno</h1>

<h3>¿Está seguro que desea eliminar este alumno?</h3>
<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        
        <dt class="col-sm-2">Apellido:</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        
        <dt class="col-sm-2">Fecha Nacimiento:</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToShortDateString()</dd>
        
        <dt class="col-sm-2">Grado:</dt>
        <dd class="col-sm-10">@Model.Grado</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" name="id" value="@Model.AlumnoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AlumnoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
