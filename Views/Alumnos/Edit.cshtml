@model SistemaExpedientesAcademicos.Models.Alumno
@{
    ViewData["Title"] = "Editar Alumno";
}

<h1>Editar Alumno</h1>

<form method="post">
    <input type="hidden" name="AlumnoId" value="@Model.AlumnoId" />
    
    <div class="form-group">
        <label>Nombre:</label>
        <input type="text" name="Nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    
    <div class="form-group">
        <label>Apellido:</label>
        <input type="text" name="Apellido" class="form-control" value="@Model.Apellido" required />
    </div>
    
    <div class="form-group">
        <label>Fecha Nacimiento:</label>
        <input type="date" name="FechaNacimiento" class="form-control" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" required />
    </div>
    
    <div class="form-group">
        <label>Grado:</label>
        <input type="text" name="Grado" class="form-control" value="@Model.Grado" required />
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
