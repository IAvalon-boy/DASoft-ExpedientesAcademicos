@model SistemaExpedientesAcademicos.Models.Expedientes
@{
    ViewData["Title"] = "Eliminar Expediente";
}

<h1>Eliminar Expediente</h1>

<h3>¿Está seguro que desea eliminar este expediente?</h3>
<div>
    <h4>Expediente Académico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Alumno:</dt>
        <dd class="col-sm-10">@Model.Alumno?.Nombre @Model.Alumno?.Apellido</dd>
        
        <dt class="col-sm-2">Materia:</dt>
        <dd class="col-sm-10">@Model.Materia?.NombreMateria</dd>
        
        <dt class="col-sm-2">Nota Final:</dt>
        <dd class="col-sm-10">@Model.NotaFinal</dd>
        
        <dt class="col-sm-2">Observaciones:</dt>
        <dd class="col-sm-10">@Model.Observaciones</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" name="id" value="@Model.ExpedienteId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>